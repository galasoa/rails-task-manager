<%= form_for(@task) do |f| %>

  <%= f.label :title, "Task title" %>
  <%= f.text_field :title %>

  <%= f.label :details, "Task description" %>
  <%= f.text_field :details %>

  <% unless @task.new_record? %>
    <%= f.label :completed, "completed" %>
    <%= f.check_box :completed %>
  <% end %>


  <%= f.submit %>

<% end %>
