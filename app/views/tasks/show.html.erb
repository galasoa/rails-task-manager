<div class="card-task">
  <h1><%= @task.title %></h1>
  <%= link_to "Edit this task", edit_task_path(@task) %>
  <p><%= @task.details %></p>
  <% if @task.completed %>
    <p>
      <i class="fa fa-check-square-o"></i> Task completed
    </p>
  <% else %>
    <p>
      <i class="fa fa-square-o"></i> Task not yet completed
    </p>
  <% end %>
  <%= link_to "Back to list", tasks_path %>

</div>
